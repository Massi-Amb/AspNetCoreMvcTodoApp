@model List<Todo>

<h2>Todos</h2>

<a asp-action="Create">Add New Todo</a>
 <table class="table">
<thead>
    <tr>
        <th>Id</th>
        <th>Description</th>
        <th>Iscomplted</th>
        <th>Delete</th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
            {
              <tr>
                  <td>@item.Id</td>
                  <td>@item.Description</td>
                  <td>@item.IsCompleted</td>
                  <td>
                    <form asp-action="Delete" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you want to delete this Todo?')">
                        </button>
                    </form>
                  </td>
                </tr>                            
            }
</tbody>

</table>

